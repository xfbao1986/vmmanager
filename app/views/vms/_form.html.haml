= form_for @vm do |f|
  - if @vm.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vm.errors.count, "error")} prohibited this vm from being saved:"
      %ul
        - @vm.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :hostname
    = f.text_field :hostname
  .field
    = f.label :ipaddr
    = f.text_field :ipaddr
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :skipcheck
    = f.check_box :skipcheck
  .field
    = f.label :deletable
    = f.check_box :deletable
  .field
    = f.label :login_info
    = f.text_area :login_info
  .actions
    = f.submit 'Save'
