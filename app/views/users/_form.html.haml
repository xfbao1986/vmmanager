= form_for @user, html: {class: "form-horizontal"} do |f|
  - if @user.errors.any?
    #error_explanation
      %strong.text-error= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li.text-error= msg

  .control-group
    = f.label :name, class: "control-label"
    .controls
      = f.text_field :name, placeholder: "user name", required: true
  .control-group
    = f.label :email, class: "control-label"
    .controls
      = f.text_field :email, placeholder: "user email", required: true
  .control-group
    = f.label :admin, class: "control-label"
    .controls
      = f.check_box :admin
  .form-actions
    = f.submit 'Save', class: "btn btn-primary"
    = f.submit 'Reset', class: "btn", type: "reset"
